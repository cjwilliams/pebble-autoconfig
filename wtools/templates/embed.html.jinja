<!DOCTYPE html>
<html>
<head>
	<title>{{longName}}</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<style type="text/css" media="screen">
{% include "embed/css/pure/0.4.2/base-min.css" %}
{% include "embed/css/pure/0.4.2/buttons-min.css" %}
{% include "embed/css/pure/0.4.2/forms-min.css" %}
{% include "embed/css/pure/0.4.2/grid-custom-min.css" %}
{% macro pa_css() %}{% include "embed/css/pebble-autoconfig.css" %}{% endmacro %}
{{ pa_css()|minify_css }}
	</style>
</head>
<body>
	<div class="wrapper">
		<header>
			<h1>{{longName}}</h1>
		</header>
		<article>
			<form class="pure-form pure-form-stacked">
				<fieldset>
					{% if 'items' in preferences %}
					{%- for item in preferences['items']: %}
					<div class="pure-control-group">
						<h4>{{ item['title'] }}</h4>
						<div class="subtitle">{{ item['subtitle']}}</div>
						{%- if item['type'] == 'enum' %}
						<select id="{{ item['name'] }}" class="pure-input-1" name="{{ item['name'] }}">
							{%- for key, choice in item['choices'].iteritems() %}
							<option value="{{loop.index0 }}">{{ choice }}</option>
							{%- endfor %}
						</select>
						{%- elif item['type'] == 'integer' %}
						<div class="pure-g">
							<div class="pure-u-1-4">
								<div class="l-box">
									<input id="{{ item['name'] }}" class="pure-input-1" type="number" name="{{ item['name'] }}" min="{{item['min']}}" max="{{item['max']}}" required>
								</div>
							</div>
							<div class="pure-u-3-4">
								<div class="l-box">
									<input class="pure-input-1" type="range" min="{{item['min']}}" max="{{item['max']}}">
								</div>
							</div>
						</div>
						{%- elif item['type'] == 'boolean' %}
						<label for="{{ item['name'] }}-off" class="pure-radio">
							<input id="{{ item['name'] }}-off" type="radio" name="{{ item['name'] }}" value="0">
							{{ item['off-text'] }}
						</label>
						<label for="{{ item['name'] }}-on" class="pure-radio">
							<input id="{{ item['name'] }}-on" type="radio" name="{{ item['name'] }}" value="1">
							{{ item['on-text'] }}
						</label>
						{%- elif item['type'] == 'string' %}
						<input id="{{ item['name'] }}" class="pure-input-1" type="text" name="{{ item['name'] }}" value="" maxlength="{{ item['max-length'] }}" 
						{%- if item['pattern'] %} pattern="{{ item['pattern'] }}">
						{%- else %}>
						{%- endif %}
						{%- endif %}
					</div>
					{%- endfor %}
					{%- endif %}
				</fieldset>
				<div class="buttons">
					<button id="save" class="pure-button pure-button-primary" type="submit" form="form">Save</button>
					<button id="cancel" class="pure-button">Cancel</button>
				</div>
				<div class="clear"></div>
			</form>
			<div id="log"></div>
			<div class="push"></div>
		</article>
	</div>
	<footer class="l-box is-center">
		Powered by Pebble Autoconfig
	</footer>
	<script type="text/javascript">
{% macro pa_val() %}{% include "embed/js/validation.js" %}{% endmacro %}
{{ pa_val()|minify_js }}
{% macro pa_js() %}{% include "embed/js/pebble-autoconfig.js.jinja" %}{% endmacro %}
{{ pa_js()|minify_js }}
	</script>
</body>
</html>